@model Dossier
@{
    @*
        ################ TO DO ################
        #   Make dossier number dynamic!!     #
        ################ TO DO ################
    *@
    ViewData["Title"] = "Dossier #";
}

<body>
    <div class="container">
        <h1>Details @ViewData["Title"]</h1>
        @{
            Dossier dossier = ViewBag.Dossier;
            List<String> SelectedRooms = new List<String>();
            List<int> SelectedDiners = new List<int>();
            List<String> SelectedReceptions = new List<String>();
            if (dossier.DossierRoomList != null)
            {
                foreach (Room r in dossier.DossierRoomList)
                {
                    SelectedRooms.Add(r.RoomName);

                }

            }
            if(dossier.DossierReceptionsList != null)
            {
                foreach(Diner d in dossier.DossierDinersList)
                {
                    SelectedDiners.Add(d.DinerId);

                }

            }

        }
        <div class="form-group row">
            <label asp-for="DossierName" class="col-sm-2 col-form-label">Dossiernaam:</label>
            <div class="col-sm-10">
                <input asp-for="DossierName" value="@dossier.DossierName" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CustomerId" class="col-sm-2 col-form-label">Klant: </label>
            <div class="col-sm-10">
                <input asp-for="CustomerId" value="@dossier.CustomerId" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PartyType" class="col-sm-2 col-form-label">Soort feest:</label>
            <div class="col-sm-10">
                <input asp-for="PartyType" value="@dossier.PartyType" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DatePlanned" class="col-sm-2 col-form-label">Datum: </label>
            <div class="col-sm-10">
                <input type="text" asp-for="DatePlanned" value="@dossier.DatePlanned.ToShortDateString()" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Budget" class="col-sm-2 col-form-label">Budget: </label>
            <div class="col-sm-10">
                <input asp-for="Budget" value="@dossier.Budget" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DossierRoomList" class="col-sm-2 col-form-label">Geselecteerde zalen:</label>
            <div class="col-sm-12">
                <select class="form-control" asp-for="DossierRoomList"
                        asp-items="@(new SelectList(SelectedRooms))" disabled></select>
            </div>
        </div>
        <div class="form-group row">
            <a href="/Dossier/DossierKiesZaal"><input type="button" class="btn btn-primary" value="Voeg zaal toe" /></a>
        </div>
        <div class="form-group row">
            <label asp-for="DossierReceptionsList" class="col-sm-2 col-form-label">Zalen:</label>
            <div class="col-sm-12">
                <select class="form-control" asp-for="DossierReceptionsList"
                        asp-items="@(new SelectList(SelectedReceptions))" disabled></select>
            </div>
        </div>
        <div class="form-group row">
            <a href="/Dossier/DossierKiesReceptie"><input type="button" class="btn btn-primary" value="Voeg receptie toe" /></a>
        </div>
        <div class="form-group row">
            <label asp-for="DossierDinersList" class="col-sm-2 col-form-label">Geselecteerde diners:</label>
            <div class="col-sm-12">
                <select class="form-control" asp-for="DossierDinersList"
                        asp-items="@(new SelectList(SelectedDiners))" disabled></select>
            </div>
        </div>
        <div class="form-group row">
            <a href="/Dossier/DossierKiesDiner"><input type="button" class="btn btn-primary" value="Voeg diner toe" /></a>
        </div>
</body>