<body>
    <div class="container">
        <h1>Details @ViewData["Title"]</h1>
        @{
        Dossier dossier = ViewBag.Dossier;
        List<String> SelectedRooms = new List<String>();
        if (dossier.DossierRoomList != null)
        {
            foreach (Room r in dossier.DossierRoomList)
            {
                SelectedRooms.Add(r.RoomName);

            }

        }

        }
        <div class="form-group row">
            <label asp-for="DossierName" class="col-sm-2 col-form-label">Dossiernaam:</label>
            <div class="col-sm-10">
                <input asp-for="DossierName" value="@dossier.DossierName" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CustomerId" class="col-sm-2 col-form-label">Klant: </label>
            <div class="col-sm-10">
                <input asp-for="CustomerId" value="@dossier.CustomerId" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="PartyType" class="col-sm-2 col-form-label">Soort feest:</label>
            <div class="col-sm-10">
                <input asp-for="PartyType" value="@dossier.PartyType" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="DatePlanned" class="col-sm-2 col-form-label">Datum: </label>
            <div class="col-sm-10">
                <input type="text" asp-for="DatePlanned" value="@dossier.DatePlanned.ToShortDateString()" disabled class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Budget" class="col-sm-2 col-form-label">Budget: </label>
            <div class="col-sm-10">
                <input asp-for="Budget" value="@dossier.Budget" disabled class="form-control" />
            </div>
        </div>
        <label asp-for="DossierRoomList" class="col-sm-2 col-form-label">Geselecteerde zalen:</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="DossierRoomList"
                    asp-items="@(new SelectList(SelectedRooms))" disabled>
            </select>
