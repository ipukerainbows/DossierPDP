@model Diner
@{
    ViewData["Title"] = "Kies diner";
}

<body>
    @{
        Dossier dossier = ViewBag.Dossier;
        List<int> DinerList = new List<int>();
        foreach (Diner d in ViewBag.Diner)
        {
            DinerList.Add(d.DinerId);

        }
    }
    <div class="container">
        <h1>
            Kies zaal voor Dossier: @dossier.DossierName
        </h1>
        <form enctype="multipart/form-data" asp-controller="Dossier" asp-action="DossierKiesDiner" method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="DinerId" class="col-sm-2 col-form-label">Zaal</label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="DinerId"
                            asp-items="@(new SelectList(DinerList))">
                        <option type="checkbox" value="" disabled selected>Selecteer diner</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <button type="submit" class="btn btn-primary">Voeg diner toe</button>
            </div>
        </form>
    </div>
</body>

