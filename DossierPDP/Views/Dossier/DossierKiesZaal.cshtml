@model Room
@{
    ViewData["Title"] = "Kies zaal";
}

<body>
    @{
        Dossier dossier = ViewBag.Dossier;
        List<String> RoomList = new List<String>();
        foreach (Room r in ViewBag.Rooms)
        {
            RoomList.Add(r.RoomName);

        }
    }
    <div class="container">
        <h1>
            Kies zaal voor Dossier: @dossier.DossierName
        </h1>
        <form enctype="text/plain" asp-controller="Dossier" asp-action="DossierKiesZaalTest" method="get" class="mt-3">
            <div class="form-group row">
                <label asp-for="RoomName" class="col-sm-2 col-form-label">Zaal</label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="RoomName"
                            asp-items="@(new SelectList(RoomList))">
                        <option type="checkbox" value="" disabled selected>Selecteer zaal</option>
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <button type="submit" class="btn btn-primary">Voeg zaal toe</button>
            </div> 
        </form>
    </div>
</body>
