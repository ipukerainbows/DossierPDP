@model Dossier
@{
    @*
        ################ TO DO ################
        #   Make dossier number dynamic!!     #  
        ################ TO DO ################
    *@
    ViewData["Title"] = "Dossier #";
}

<body>
    <div class="container">
        <h1>Details @ViewData["Title"]</h1>
        @{
            Dossier dossier = ViewBag.Dossier;
            List<String> RoomList = new List<String>();
            foreach (Room r in ViewBag.Rooms)
            {
                RoomList.Add(r.RoomName);

            }

        }
        <p>Name: @dossier.DossierName</p>
        <p>Klant ID: @dossier.CustomerId</p>
        <p>Soort feest: @dossier.PartyType</p>
        <p>Datum: @dossier.DatePlanned.ToShortDateString()</p>
        <p>Budget: € @dossier.Budget</p>
        <form asp-controller="Dossier" asp-action="DossierUpdate" method="post" class="mt-3">
            <div class="form-group row">
                <label asp-for="DossierRoomList" class="col-sm-2 col-form-label">Zaal</label>
                <div class="col-sm-10">
                    <select class="form-control" asp-for="DossierRoomList"
                            asp-items="@(new SelectList(RoomList))">
                        <option value="" disabled selected>Selecteer zaal</option>
                    </select>
                    <span asp-validation-for="DossierRoomList" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <button type="submit" class="btn btn-primary">Wijzig Details</button>
            </div>
        </form>
    </div>
</body>