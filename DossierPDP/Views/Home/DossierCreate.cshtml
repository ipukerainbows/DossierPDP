@model Dossier
@{
    ViewData["Title"] = "Nieuw Dossier";
}

<h1>@ViewData["Title"]</h1>

<form enctype="multipart/form-data" asp-controller="Home" asp-action="CreateDossier" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="DossierName" class="col-sm-2 col-form-label">Naam Dossier</label>
        <div class="col-sm-10">
            <input asp-for="DossierName" class="form-control" placeholder="Dossier naam" />
            <!--<span asp-validation-for="Dossiername" class="text-danger"></span>-->
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="CustomerId" class="col-sm-2 col-form-label">Klant ID</label>
        <div class="col-sm-10">
            <input asp-for="CustomerId" class="form-control" placeholder="Klant" min="1" />
            <!--<span asp-validation-for="Email" class="text-danger"></span>-->
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="PartyType" class="col-sm-2 col-form-label">Type feest</label>
        <div class="col-sm-10">
            <select class="form-control" asp-for="PartyType"
                    asp-items="Html.GetEnumSelectList<PartyType>()">
                <option value="">Selecteer soort feest</option>
            </select>
            <span asp-validation-for="PartyType" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="DatePlanned" class="col-sm-2 col-form-label">Datum</label>
        <div class="col-sm-10">
            <input type="date" asp-for="DatePlanned" class="form-control" />

        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Budget" class="col-sm-2 col-form-label">Budget (€)</label>
        <div class="col-sm-10">
            <input asp-for="Budget" class="form-control" placeholder="Budget" step="10" min="0" />
        </div>
    </div>

    <img />

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <button type="submit" class="btn btn-primary"> Maak dossier aan </button>
    </div>

    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>
